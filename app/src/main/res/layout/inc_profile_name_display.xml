<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary_green">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nameInitialView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="20dp"
        android:scaleType="center"
        android:src="@drawable/shape_name_initial_display_bg"
        app:layout_constraintBottom_toTopOf="@id/userFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userNameShort"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/pt_sans_bold"
        android:gravity="center"
        tools:text="ST"
        android:textAlignment="center"
        android:textColor="@color/primary_green"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameInitialView"
        app:layout_constraintEnd_toEndOf="@+id/nameInitialView"
        app:layout_constraintStart_toStartOf="@+id/nameInitialView"
        app:layout_constraintTop_toTopOf="@+id/nameInitialView"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/updateName"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_sos_active_circle"
        android:padding="5dp"
        android:src="@drawable/iv_update_username"
        app:layout_constraintBottom_toBottomOf="@id/nameInitialView"
        app:layout_constraintEnd_toEndOf="@id/nameInitialView"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/nameInitialView"
        app:layout_constraintTop_toTopOf="@id/nameInitialView"
        app:layout_constraintVertical_bias="0.3" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pt_sans_bold"
        tools:text="Suraj R. T."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/userEmailId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameInitialView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userEmailId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pt_sans"
        tools:text="surajTambe@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/userMobileNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userFullName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userMobileNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/pt_sans"
        tools:text="Age: 20 Yrs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEmailId" />

</androidx.constraintlayout.widget.ConstraintLayout>